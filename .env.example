# Environment Variables for Audio Converter Service

# API Configuration
# 360Dialog WhatsApp Business API
UPLOAD_API_URL=https://waba-v2.360dialog.io/media

# Container Configuration
NODE_ENV=production
PORT=8080

# Optional: Custom timeouts (in milliseconds)
DOWNLOAD_TIMEOUT=30000
UPLOAD_TIMEOUT=60000
CONVERSION_TIMEOUT=120000

# Optional: File size limits (in bytes)
MAX_FILE_SIZE=104857600  # 100MB

# Optional: Logging level
LOG_LEVEL=info
